<%= stylesheet_link_tag 'foods' %>
<div class="foods-index-cont">
  <h1> testing food </h1>
  <%= link_to 'add your favorite food', new_food_path  %>
  <% if Food.count == 0  %>
    <p> No food yet... </p>
  <% else %>
    <% @foods.each do |food| %>
      <p> <%= food.name %> </p>
      <p> <%= food.measurement_unit %> </p>
      <p> <%= food.price %>$ </p>
    <% end  %>
  <% end %>
</div>
