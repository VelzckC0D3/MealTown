<!-- app/views/comments/new.html.erb -->
<%= form_with(model: [current_user, Food.new], url: foods_path, local: true) do |form| %>
  <h1 class="foods-form-title">New Food</h1>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "Food Name" %>
  </div>
  <div class="field">
    <%= form.label :measurement_unit %>
    <%= form.text_field :measurement_unit, placeholder: "Measurement Unit" %>
  </div>
  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, placeholder: "Price" %>
  </div>
  <%= form.submit 'Add Food', class: "submit-btn" %>
<% end %>
